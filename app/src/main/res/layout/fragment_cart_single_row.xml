<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_margin="4dp"
        android:elevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cartItemThumbnail"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="3dp"
                android:src="@drawable/placeholder" />

            <TextView
                android:id="@+id/cartItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cartItemThumbnail"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Finding a Common Thread\u00a0in the Al Jazeera Doping Report"
                android:textColor="#222"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cartItemName"
                android:layout_toRightOf="@+id/cartItemThumbnail"
                android:id="@+id/cartItemPrices"
                android:padding="3dp"
                android:text="$21/$32/$96/WE/$288"/>

<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
    android:id="@+id/cartItemCount"
                android:layout_below="@+id/cartItemName"
                android:text="10"
                android:padding="3dp"
                android:layout_toRightOf="@+id/cartItemPrices"
                android:layout_alignBaseline="@+id/cartItemPrices"
               android:layout_marginLeft="20sp"
                android:textColor="@color/colorAccent"/>



        </RelativeLayout>
    </FrameLayout>

</ScrollView>